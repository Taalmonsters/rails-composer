<!DOCTYPE html>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>De Taalmonsters<%%= " - "+yield(:title) if content_for?(:title) %></title>
		<meta name="description" content="<%%= yield(:description) if content_for?(:description) %>">
		<%%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
		<%%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%%= csrf_meta_tags %>
	</head>
	<body>
		<header>
			<%%= render 'layouts/navigation' %>
		</header>
		<main class="container-fluid">
			<div class="row">
				<div id="left" class="col-xs-12 col-sm-2">
					<%% if current_user %>
					<%%= render 'layouts/menu' %>
					<%% end %>
				</div>
				<div id="footer">
					<%%= render 'layouts/copyright' %>
				</div>
				<div id="right" class="col-xs-12 col-sm-10">
					<%%= render 'layouts/messages' %>
					<%%= yield %>
				</div>
			</div>
		</main>
	</body>
</html>
